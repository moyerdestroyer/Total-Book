{
  "name": "total_book",
  "version": "1.0.0",
  "description": "*A WordPress plugin for the putting your book on the web*",
  "main": "webpack.widget.js",
  "scripts": {
    "dev": "webpack --config webpack.widget.js --watch",
    "dev:blocks": "npm run build --prefix blocks",

    "build": "webpack --config webpack.widget.js",
    "build:blocks": "npm run build --prefix blocks",

    "dev:all": "concurrently \"npm run dev\" \"npm run dev:blocks\"",
    "build:all": "concurrently \"npm run build\" \"npm run build:blocks\""
  },
