{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "ttbp/bookshelf",
	"title": "Bookshelf",
	"category": "widgets",
	"icon": "book",
	"description": "Display a grid of books from your library.",
	"keywords": ["books", "bookshelf", "library"],
	"textdomain": "the-total-book-project",
	"attributes": {
		"count": {
			"type": "number",
			"default": 6
		},
		"showExcerpt": {
			"type": "boolean",
			"default": true
		}
	},
	"supports": {
		"html": false,
		"align": ["wide", "full"]
	},
	"editorScript": "file:./index.js",
	"style": "file:./style.css"
}

